{% extends "base.html.twig" %}

{% block title %}SymRecipe - Nouvelle recette{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="mt-4">Création d'une recette</h1>

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="form-error">
                   {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.time) }}
                {{ form_widget(form.time) }}
                <div class="form-error">
                   {{ form_errors(form.time) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.nbPeople) }}
                {{ form_widget(form.nbPeople) }}
                <div class="form-error">
                   {{ form_errors(form.nbPeople) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.difficulty) }}
                {{ form_widget(form.difficulty) }}
                <div class="form-error">
                   {{ form_errors(form.difficulty) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                <div class="form-error">
                   {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <div class="form-error">
                   {{ form_errors(form.price) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.isFavorite) }}
                {{ form_widget(form.isFavorite) }}
                <div class="form-error">
                   {{ form_errors(form.isFavorite) }}
                </div>
            </div>

            {{ form_row(form.ingredients) }}

            {{ form_row(form.imageFile) }}

            <div class="form-group">
                {# {{ form_row(form.submit) }} #}
                {{ form_row(form.submit, {'label': 'Ajouter la recette', 'id': 'swa-confirm-add'}) }}  
                {# {'id': 'swa-confirm-add'} --> Ajout pour Sweet Alert, sinon la ligne du dessus suffit #}
            </div>

        {{ form_end(form) }}

    </div>

    {# Liens vers la librairie SweetAlert et le code JS associé à la confirmation d'ajout #}
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/sweetAlert_AddRecipe.js"></script>

{% endblock %}