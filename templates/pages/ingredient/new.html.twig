{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Création d'un ingrédient</h1>

        {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                <div class="form-error">
                   {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price) }}
                <div class="form-error">
                   {{ form_errors(form.price) }}
                </div>
            </div>

            <div class="form-group">
                {# {{ form_row(form.submit) }} #}
                {{ form_row(form.submit, {'label': 'Ajouter l\'ingrédient', 'id': 'swa-confirm-add'}) }}  
                {# {'id': 'swa-confirm-add'} --> Ajout pour Sweet Alert, sinon la ligne du dessus suffit #}
            </div>

        {{ form_end(form) }}

    </div>

    {# Liens vers la librairie SweetAlert et le code JS associé à la confirmation d'ajout #}
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/sweetAlert_AddIngredient.js"></script>

{# {'label': 'Ajouter l\'ingrédient', 'id': 'swa-confirm-add'}  #}

{% endblock %}